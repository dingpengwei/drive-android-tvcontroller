<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/monitor_beginer_guide_bg"
    android:id="@+id/act_tvcontroller_container"
    >
    
    <RelativeLayout 
        android:id="@+id/rl_tv_controller_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        >

    </RelativeLayout>    
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView 
            android:id="@+id/iv_mode_controller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_left_menu_caller"
            android:layout_weight="5"
            android:contentDescription="@string/app_name"
            />
        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/string_et_hint"
            />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        >
        <ImageView
            android:id="@+id/iv_bottom_home"
            android:layout_width="@dimen/home_port_width"
            android:layout_height="@dimen/home_port_height"
            android:src="@drawable/selector_home"
            android:clickable="true"
            android:scaleType="fitXY"
            android:contentDescription="@string/app_name"
            />
        <ImageView
            android:id="@+id/iv_bottom_back"
            android:layout_width="@dimen/back_port_width"
            android:layout_height="@dimen/back_port_height"
            android:src="@drawable/selector_back"
            android:clickable="true"
            android:scaleType="fitXY"
            android:contentDescription="@string/app_name"
            />
        <ImageView
            android:id="@+id/iv_bottom_menu"
            android:layout_width="@dimen/menu_port_width"
            android:layout_height="@dimen/menu_port_height"
            android:src="@drawable/selector_menu"
            android:clickable="true"
            android:scaleType="fitXY"
            android:contentDescription="@string/app_name"
            />
    </LinearLayout>
</RelativeLayout>
